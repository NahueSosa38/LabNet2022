@model List<Tp.MVC.First.Models.CategoriesView>

@{
    ViewBag.Title = "Categories Page";
}

<h1>Pagina principal de Categories</h1>


<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#ID</th>
            <th scope="col">Categoria</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Acción</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">@item.Id</th>
            <td>@item.Name</td>
            <td>@item.Descripcion</td>
            <td>@Html.ActionLink("Borrar", "Borrar", new {id = item.Id }, new {onclick = "return confirm('Confirme la acción')"})</td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Agregar/Modificar Categoria","AgregarModificar")
</div>
